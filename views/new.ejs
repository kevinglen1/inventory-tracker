<!DOCTYPE html>
<html lang="en">
  <h2>Enter a New Inventory Item</h2>
  <form action="/inventoryitems" method="POST">
    <label
      >Item Name:
      <input type="text" name="itemName" /> </label
    ><br />
    <input type="submit" value="Add Item" />
  </form>

  <% for (const item in inventories) { %>
  <div class="centered">
    <div class="col s12 m6 card-width">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= inventories[item]['itemName'] %></span>
          <p><%= inventories[item]['_id'] %></p>
        </div>
        <div class="card-action">
          <form
            action="/inventoryItems/<%= inventories[item]['_id']  %>"
            method="GET"
            class="secondary-content"
          >
            <button type="submit" class="btn-small white-text">Edit</button>
          </form>

          <form
            action="/inventoryItems/<%= inventories[item]['_id']  %>?_method=DELETE"
            method="POST"
            class="secondary-content"
          >
            <button type="submit" class="btn-small white-text">Delete</button>
          </form>

        </div>
      </div>
    </div>
  </div>
  <% } %>
</html>
